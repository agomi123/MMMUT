<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ExaminationResult">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#03A9F4"
        android:layout_marginBottom="20dp"
        android:layout_height="45dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="goback"
            android:src="@drawable/ic_baseline_arr"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Examination and Result"
            android:background="#03A9F4"
            android:fontFamily="@font/font5"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/white"/>
    </RelativeLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/blue_bg">
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/title"
            android:layout_gravity="center_horizontal"
            android:rowCount="6"
            android:columnCount="1">
            <androidx.cardview.widget.CardView
                android:layout_width="140dp"
                android:layout_height="120dp"
                android:layout_gravity="center_horizontal"
                app:cardCornerRadius="8dp"
                android:layout_row="0"
                android:onClick="first"
                android:layout_column="0"
                android:layout_marginTop="10dp"
                app:cardElevation="8dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_gravity="center_vertical|center_horizontal">
                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="100dp"
                        android:src="@drawable/exam"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Examination Manual"
                        android:textStyle="bold"
                        android:textAlignment="center"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="140dp"
                android:layout_height="120dp"
                android:layout_row="1"
                android:layout_column="0"
                android:onClick="second"
                android:layout_gravity="center_horizontal"
                app:cardCornerRadius="8dp"
                android:layout_marginTop="10dp"
                app:cardElevation="8dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_gravity="center_vertical|center_horizontal">
                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="100dp"
                        android:src="@drawable/goal"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="One View Result"
                        android:textStyle="bold"
                        android:textAlignment="center"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="140dp"
                android:layout_height="120dp"
                android:layout_gravity="center_horizontal"
                app:cardCornerRadius="8dp"
                android:onClick="third"
                android:layout_row="2"
                android:layout_column="0"
                android:layout_marginTop="10dp"
                app:cardElevation="8dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_gravity="center_vertical|center_horizontal">
                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="100dp"
                        android:src="@drawable/examine"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Result Verification"
                        android:textStyle="bold"
                        android:textAlignment="center"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="140dp"
                android:layout_height="120dp"
                android:layout_row="3"
                android:onClick="fourth"
                android:layout_column="0"
                android:layout_gravity="center_horizontal"
                app:cardCornerRadius="8dp"
                android:layout_marginTop="10dp"
                app:cardElevation="8dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_gravity="center_vertical|center_horizontal">
                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="100dp"
                        android:src="@drawable/exschedule"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Schedules"
                        android:textStyle="bold"
                        android:textAlignment="center"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="140dp"
                android:layout_height="120dp"
                android:onClick="fivth"
                android:layout_gravity="center_horizontal"
                app:cardCornerRadius="8dp"
                android:layout_row="4"
                android:layout_column="0"
                android:layout_marginTop="10dp"
                app:cardElevation="8dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_gravity="center_vertical|center_horizontal">
                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="100dp"
                        android:src="@drawable/faq"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Model Question Papers"
                        android:textStyle="bold"
                        android:textAlignment="center"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="140dp"
                android:onClick="sixth"
                android:layout_height="120dp"
                android:layout_gravity="center_horizontal"
                app:cardCornerRadius="8dp"
                android:layout_row="5"
                android:layout_column="0"
                android:layout_marginTop="10dp"
                app:cardElevation="8dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_gravity="center_vertical|center_horizontal">
                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="100dp"
                        android:src="@drawable/digilocker"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DigiLocker NAD"
                        android:textStyle="bold"
                        android:textAlignment="center"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </GridLayout>
    </ScrollView>

</LinearLayout>