<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="350dp"
    android:id="@+id/custompop"
    android:layout_height="475dp"
    android:padding="5dp"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:elevation="8dp"
    android:background="@color/black">
    <TextView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_gravity="end"
        android:gravity="center"
        android:id="@+id/textclose"
        android:background="@drawable/circlebackground"
        android:text="X"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/logo"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MALAVIYAN"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:text="ALUMINI"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/linearcornerlayout"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="130dp"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@color/orange"
            android:onClick="gotomaa"
            android:orientation="vertical">
            <ImageView
                android:layout_width="100dp"
                android:background="@drawable/white_btn_background"
                android:layout_height="70dp"
                android:layout_marginTop="15dp"
               android:src="@drawable/mac"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Malviyan Alumni Association"
                android:textSize="14sp"
                android:gravity="center"
                android:textColor="@color/white"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="130dp"
            android:layout_weight="1"
            android:gravity="center"
            android:onClick="gotoac"
            android:background="@color/green"
            android:orientation="vertical">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:background="@drawable/white_btn_background"
                android:src="@drawable/alumnichapter"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alumni Chapters"
                android:textSize="14sp"
                android:gravity="center"
                android:textColor="@color/white"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="130dp"
            android:layout_weight="1"
            android:gravity="center"
            android:onClick="gotoam"
            android:background="@color/bluelight"
            android:orientation="vertical">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:background="@drawable/white_btn_background"
                android:src="@drawable/alumnimeet"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alumni Meet"
                android:textSize="14sp"
                android:gravity="center"
                android:textColor="@color/white"
                />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btnfollow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp"
        android:background="@drawable/buttonstyle"
        android:text="Follow Me"
        android:onClick="followme"
        android:textColor="@color/white"
        app:backgroundTint="#1B1A1A" />
</LinearLayout>